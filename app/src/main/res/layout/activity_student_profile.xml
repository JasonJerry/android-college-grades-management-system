<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_student_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.menuka.loginandregistration.StudentProfileActivity">

    <Button
        android:id="@+id/btnGradesManagement"
        android:text="Grades Management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_above="@+id/btnAccountSettings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnAccountSettings"
        android:text="Account Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnReceivedFeedback"
        android:layout_alignLeft="@+id/btnGradesManagement"
        android:layout_alignStart="@+id/btnGradesManagement"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btnReceivedFeedback"
        android:text="Received Feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnAccountSettings"
        android:layout_alignEnd="@+id/btnAccountSettings" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnReceivedFeedback"
        android:layout_alignStart="@+id/btnReceivedFeedback"
        android:layout_marginBottom="99dp" />

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAccountSettings"
        android:layout_alignRight="@+id/btnAccountSettings"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="TextView"
        android:textSize="24sp"
        tools:text="Logged In as" />


</RelativeLayout>
